<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>
    <!-- Top left circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="@color/primary_light"
                android:endColor="#00FFFFFF" />
            <size
                android:width="300dp"
                android:height="300dp" />
        </shape>
        <translate
            android:fromXDelta="-40%"
            android:fromYDelta="-40%" />
    </item>
    <!-- Bottom right circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="120dp"
                android:startColor="#332DD4BF"
                android:endColor="#00FFFFFF" />
            <size
                android:width="240dp"
                android:height="240dp" />
        </shape>
        <translate
            android:fromXDelta="60%"
            android:fromYDelta="80%" />
    </item>
</layer-list> 